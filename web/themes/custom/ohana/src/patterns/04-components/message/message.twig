{% for type, messages in message_list %}
  <div {% if type == 'error' %} role="alert" {% else %} role="contentinfo" {% endif %} aria-label="{{ status_headings[type] }}"{{ attributes ? attributes|without('role', 'aria-label') }} class="message message--{{ type }}">
    <h2 class="visually-hidden">{{ status_headings[type] }}</h2>
    <ul class="message__list">
      {% for message in messages %}
        <li class="message__item">{{- message -}}</li>
      {% endfor %}
    </ul>
  </div>
{% endfor %}
